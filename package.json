{
  "name": "@fabdeh/eslint-config",
  "type": "module",
  "version": "0.0.4",
  "description": "My personal eslint config preset",
  "homepage": "https://eslint-config.dehopre.dev/",
  "keywords": [
    "eslint-config"
  ],
  "author": "Fabien Dehopr√© <fabien@dehopre.dev> (https://github.com/FabienDehopre)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabienDehopre/eslint-config.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.2.0",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "build:inspector": "pnpm build && pnpm dlx @eslint/config-inspector build",
    "dev": "pnpm dlx @eslint/config-inspector --config eslint.config.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || simple-git-hooks",
    "commit": "git-cz",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --quiet",
    "prepack": "pnpm build",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@ngrx/eslint-plugin": "19.0.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "angular-eslint": "^19.0.2",
    "eslint": "^9.10.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^7.1.1"
  },
  "peerDependenciesMeta": {
    "@ngrx/eslint-plugin": {
      "optional": true
    },
    "@vitest/eslint-plugin": {
      "optional": true
    },
    "angular-eslint": {
      "optional": true
    },
    "eslint-plugin-jest": {
      "optional": true
    },
    "eslint-plugin-jest-dom": {
      "optional": true
    },
    "eslint-plugin-tailwindcss": {
      "optional": true
    },
    "eslint-plugin-testing-library": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.19.0",
    "@nx/eslint-plugin": "^20.4.0",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@typescript-eslint/utils": "^8.23.0",
    "eslint-config-flat-gitignore": "^2.0.0",
    "eslint-flat-config-utils": "^2.0.1",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-perfectionist": "^4.8.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "local-pkg": "^1.0.0",
    "typescript-eslint": "^8.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@ngrx/eslint-plugin": "^19.0.1",
    "@types/node": "^22.13.1",
    "@vitest/eslint-plugin": "^1.1.25",
    "angular-eslint": "^19.0.2",
    "bumpp": "^10.0.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.19.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-typegen": "^1.0.0",
    "inquirer": "^9.3.7",
    "is-ci": "^4.1.0",
    "jiti": "^2.4.2",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "nano-staged": {
    "*": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
