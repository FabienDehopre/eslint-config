{
  "name": "@fabdeh/eslint-config",
  "type": "module",
  "version": "0.6.4",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "My personal eslint config preset",
  "author": {
    "name": "Fabien DehoprÃ©",
    "email": "fabien@dehopre.dev",
    "url": "https://github.com/FabienDehopre"
  },
  "license": "MIT",
  "homepage": "https://eslint-config.dehopre.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabienDehopre/eslint-config.git"
  },
  "bugs": "https://github.com/FabienDehopre/eslint-config/issues",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "lint",
    "formatting"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^20.11.1 || ^22.11.0"
  },
  "scripts": {
    "build": "unbuild",
    "build:inspector": "pnpm build && pnpx @eslint/config-inspector build",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || simple-git-hooks",
    "commit": "git-cz",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --quiet",
    "prepack": "pnpm build",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "eslint": "^9.32.0",
    "eslint-plugin-better-tailwindcss": "^3.7.3",
    "eslint-plugin-erasable-syntax-only": "^0.3.1",
    "eslint-plugin-format": "^1.0.1",
    "prettier-plugin-slidev": "^1.0.5"
  },
  "peerDependenciesMeta": {
    "@prettier/plugin-xml": {
      "optional": true
    },
    "eslint-plugin-better-tailwindcss": {
      "optional": true
    },
    "eslint-plugin-erasable-syntax-only": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "prettier-plugin-slidev": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:",
    "@clack/prompts": "catalog:",
    "@eslint-community/eslint-plugin-eslint-comments": "catalog:",
    "@eslint/js": "catalog:",
    "@eslint/markdown": "catalog:",
    "@ngrx/eslint-plugin": "catalog:",
    "@stylistic/eslint-plugin": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@typescript-eslint/utils": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "angular-eslint": "catalog:",
    "eslint-config-flat-gitignore": "catalog:",
    "eslint-flat-config-utils": "catalog:",
    "eslint-merge-processors": "catalog:",
    "eslint-plugin-import-x": "catalog:",
    "eslint-plugin-jest-dom": "catalog:",
    "eslint-plugin-jsdoc": "catalog:",
    "eslint-plugin-jsonc": "catalog:",
    "eslint-plugin-perfectionist": "catalog:",
    "eslint-plugin-prefer-arrow-functions": "catalog:",
    "eslint-plugin-regexp": "catalog:",
    "eslint-plugin-testing-library": "catalog:",
    "eslint-plugin-toml": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "eslint-plugin-unused-imports": "catalog:",
    "eslint-plugin-yml": "catalog:",
    "globals": "catalog:",
    "jsonc-eslint-parser": "catalog:",
    "local-pkg": "catalog:",
    "toml-eslint-parser": "catalog:",
    "typescript-eslint": "catalog:",
    "yaml-eslint-parser": "catalog:"
  },
  "devDependencies": {
    "@angular/core": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/cz-commitlint": "catalog:",
    "@fabdeh/eslint-config": "workspace:*",
    "@ngrx/effects": "catalog:",
    "@ngrx/operators": "catalog:",
    "@ngrx/signals": "catalog:",
    "@ngrx/store": "catalog:",
    "@prettier/plugin-xml": "catalog:",
    "@testing-library/angular": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "changelogithub": "catalog:",
    "commitizen": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-better-tailwindcss": "catalog:",
    "eslint-plugin-erasable-syntax-only": "catalog:",
    "eslint-plugin-format": "catalog:",
    "execa": "catalog:",
    "fast-glob": "catalog:",
    "fs-extra": "catalog:",
    "is-ci": "catalog:",
    "jiti": "catalog:",
    "nano-staged": "catalog:",
    "prettier-plugin-slidev": "catalog:",
    "simple-git-hooks": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "nano-staged": {
    "*": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
